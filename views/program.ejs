<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
  <title>
    <%= pageTitle %>
  </title>
  <link rel="stylesheet" href="assets/bootstrap/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
  <link rel="stylesheet" href="assets/css/styles.css">
  <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css">
</head>

<body>

  <div id="editModal" class="modal fade" role="dialog">
    <div class="modal-dialog">

      <!-- Modal content-->
      <div class="modal-content">
        <div class="modal-header">
          <h4 class="modal-title">Edit Program</h4>
        </div>
        <div class="modal-body">
          <form id="modal-form">
            <div style="text-align: center;">
              <input type="text" name="program_id" id="program_id" readonly></br>
              <input type="text" name="program_name" id="program_name"></br>
              <input type="text" name="hfri_address" id="hfri_address">
            </div>
          </form>
        </div>
        <div class="modal-footer">
          <button type="submit" form="modal-form" class="btn btn-success">Update</button>
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        </div>
      </div>

    </div>
  </div>

  <%- include("includes/navbar.ejs")%>


    <div class="container">
      <div class="row" id="row">
        <div class="col-md-12">
          <div class="card" id="card-container">
            <div class="card-body" id="card">
              <% if (program.length==0) { %>
                <h1 style="margin-top: 5rem;">No Program found!</h1>
                <% } else { %>
                  <div class="table-responsive">
                    <table class="table">
                      <thead>
                        <tr>
                          <th>ID</th>
                          <th>Name</th>
                          <th>H.F.R.I Address</th>
                          <th></th>
                          <th></th>
                          <th></th>
                          <th></th>
                        </tr>
                      </thead>
                      <tbody>
                        <% program.forEach((program, _)=> { %>
                          <tr>
                            <td>
                              <%= program.Program_ID %>
                            </td>
                            <td>
                              <%= program.Program_name %>
                            </td>
                            <td>
                              <%= program.HFRI_Address %>
                            </td>
                            <td><a href="/project">
                                Show Projects
                              </a></th>
                            <td>

                            <td>
                              <a type="button" style="all:unset ;cursor: pointer" onclick="setModalprogram(this)"
                                data-toggle="modal" data-program_id="<%= program.Program_ID %>"
                                data-program_name="<%= program.Program_name %>"
                                data-hfri_address="<%= program.HFRI_Address %>" data-target="#editModal">
                                <i class="fa fa-edit"></i>
                              </a>
                              <form method="POST" action="/program/delete?id=<%= program.Program_ID %>">
                            <td>
                              <button style="all: unset; cursor: pointer;" type="submit"><i
                                  class="fa fa-trash"></i></button>

                            </td>
                            </form>
                            </td>
                          </tr>
                          <% }) %>
                      </tbody>
                    </table>
                  </div>
                  <% } %>
                    <td><a href="/program/create-program-page">
                        <button style="all: unset; cursor: pointer;" type="submit"><i
                            class="fa fa-add "></i></button>&nbspAdd Program
                      </a></th>


            </div>
          </div>
        </div>
      </div>
    </div>

    <script>
      function setModalprogram(row) {
        document.getElementById("program_id").value = row.dataset.program_id;
        document.getElementById("program_name").value = row.dataset.program_name;
        document.getElementById("hfri_address").value = row.dataset.hfri_address;
        document.getElementById("modal-form").action = "/program/update/" + row.dataset.id;
        document.getElementById("modal-form").method = "POST";
      }
    </script>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
      integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
      integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
      crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js"
      integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
      crossorigin="anonymous"></script>

    <script src="/assets/js/jquery.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>

</body>

</html>