<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
    <title>
        <%= pageTitle %>
    </title>
    <link rel="stylesheet" href="assets/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="stylesheet" href="assets/css/styles.css">
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css">
</head>

<body>
    <div id="editModal" class="modal fade" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Edit Project</h4>
                </div>
                <div class="modal-body">
                    <form id="modal-form">
                        <div style="text-align: center;">
                            <input type="text" name="project_id" id="project_id" readonly></br>
                            <input type="text" name="title" id="title"></br>
                            <input type="text" name="summary" id="summary"></br>
                            <input type="text" name="starting_date" id="starting_date"></br>
                            <input type="text" name="ending_date" id="ending_date"></br>
                            <input type="text" name="amount" id="amount"></br>
                            <input type="text" name="grade" id="grade"></br>
                            <input type="text" name="evaluation_date" id="evaluation_date"></br>
                            <input type="text" name="executive_id" id="executive_id"></br>
                            <input type="text" name="organization_id" id="organization_id"></br>
                            <input type="text" name="supervisor_id" id="supervisor_id"></br>
                            <input type="text" name="evaluator_id" id="evaluator_id"></br>
                            <input type="text" name="program_id" id="program_id"></br>

                        </div>
                    </form>

                </div>
                <div class="modal-footer">
                    <button type="submit" form="modal-form" class="btn btn-success">Update</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
            </div>

        </div>
    </div>

    <%- include("includes/navbar.ejs")%>

        <h1>Duration</h1>

        <form action="/project">
            <input type="checkbox" id="duration" name="duration" value="1">
            <label for="duration"> 1-2</label><br>
            <input type="checkbox" id="duration" name="duration" value="2">
            <label for="duration"> 2-3 </label><br>
            <input type="checkbox" id="duration" name="duration" value="3">
            <label for="vehicle3"> 3-4 </label><br><br>
            <input type="submit" value="Submit">
        </form>


        <div class="container">
            <div class="row" id="row">
                <div class="col-md-12">
                    <div class="card" id="card-container">
                        <div class="card-body" id="card">
                            <% if (project.length==0) { %>
                                <h1 style="margin-top: 5rem;">No Projects found!</h1>
                                <% } else { %>
                                    <div class="table-responsive">
                                        <table class="table">
                                            <thead>
                                                <tr>
                                                    <th>Project ID</th>
                                                    <th>Title</th>
                                                    <th>Summary</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <% project.forEach((project, _)=> { %>
                                                    <tr>
                                                        <td>
                                                            <%= project.Project_ID %>
                                                        </td>
                                                        <td>

                                                            <%= project.Title %>

                                                        </td>
                                                        <td>
                                                            <%= project.Summary %>
                                                        </td>
                                                        <td>
                                                            <a type="button" style="all:unset ;cursor: pointer"
                                                                onclick="setModalproject(this)" data-toggle="modal"
                                                                data-project_id="<%= project.Project_ID %>"
                                                                data-title="<%= project.Title %>"
                                                                data-summary="<%= project.Summary %>"
                                                                data-starting_date="<%= project.Starting_Date %>"
                                                                data-ending_date="<%= project.Ending_Date %>"
                                                                data-amount="<%= project.Amount %>"
                                                                data-grade="<%= project.Grade %>"
                                                                data-evaluation_date="<%= project.Evaluation_Date %>"
                                                                data-executive_id="<%= project.Executive_ID %>"
                                                                data-organization_id="<%= project.Organization_ID %>"
                                                                data-supervisor_id="<%= project.Supervisor_ID %>"
                                                                data-evaluator_id="<%= project.Evaluator_ID %>"
                                                                data-program_id="<%= project.Program_ID %>"
                                                                data-target="#editModal">
                                                                <i class="fa fa-edit"></i>
                                                            </a>

                                                            <form method="POST"
                                                                action="/project/delete?id=<%= project.Project_ID %>">

                                                        <td>
                                                            <button style="all: unset; cursor: pointer;"
                                                                type="submit"><i class="fa fa-trash"></i></button>

                                                        </td>
                                                        </form>
                                                        </td>
                                                        <td>
                                                            <a
                                                                href="/project/deliverables?id=<%= project.Project_ID %>"><i
                                                                    class="fa fa-info"></i>
                                                            </a>
                                                        </td>
                                                        <td>
                                                            <a href="/project/researchers?id=<%= project.Project_ID %>"><i
                                                                    class="fa fa-user"></i>
                                                            </a>
                                                        </td>
                                                        <td>
                                                            <a href="/project/project?id=<%= project.Project_ID %>"><i
                                                                    class="fa fa-flask"></i>
                                                            </a>
                                                        </td>
                                                    </tr>
                                                    <% }) %>
                                            </tbody>
                                        </table>
                                    </div>
                                    <% } %>
                                        <td><a href="/project/create-project-page">
                                                <button style="all: unset; cursor: pointer;" type="submit"><i
                                                        class="fa fa-add "></i></button>&nbspAdd Project
                                            </a></th>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <script>
            function setModalproject(row) {
                document.getElementById("project_id").value = row.dataset.project_id;
                document.getElementById("title").value = row.dataset.title;
                document.getElementById("summary").value = row.dataset.summary;
                document.getElementById("starting_date").value = row.dataset.starting_date;
                document.getElementById("ending_date").value = row.dataset.ending_date;
                document.getElementById("amount").value = row.dataset.amount;
                document.getElementById("grade").value = row.dataset.grade;
                document.getElementById("evaluation_date").value = row.dataset.evaluation_date;
                document.getElementById("executive_id").value = row.dataset.executive_id;
                document.getElementById("organization_id").value = row.dataset.organization_id;
                document.getElementById("supervisor_id").value = row.dataset.supervisor_id;
                document.getElementById("evaluator_id").value = row.dataset.evaluator_id;
                document.getElementById("program_id").value = row.dataset.program_id;
                document.getElementById("modal-form").action = "/project/update/" + row.dataset.id;
                document.getElementById("modal-form").method = "POST";
            }
        </script>

        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
            integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
        <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
            integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
            crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js"
            integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
            crossorigin="anonymous"></script>

        <script src="/assets/js/jquery.min.js"></script>
        <script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>

</body>

</html>