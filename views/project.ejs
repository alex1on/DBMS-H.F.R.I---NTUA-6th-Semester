<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
    <title>
        <%= pageTitle %>
    </title>
    <link rel="stylesheet" href="assets/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="stylesheet" href="assets/css/styles.css">
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css">
</head>

<body>

    <div id="editModal" class="modal fade" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Edit Project</h4>
                </div>
                <div class="modal-body">
                    <form id="modal-form">
                        <div style="text-align: center;">
                            <input type="text" name="Project_ID" id="Project_ID" readonly></br>
                            <input type="text" name="Title" id="Title"></br>
                            <input type="text" name="Summary" id="Summary"></br>
                            <input type="text" name="Starting_Date" id="Starting_Date"></br>
                            <input type="text" name="Ending_Date" id="Ending_Date"></br>
                            <input type="text" name="Amount" id="Amount"></br>
                            <input type="text" name="Grade" id="Grade"></br>
                            <input type="text" name="Evaluation_Date" id="Evaluation_Date">
                            <input type="text" name="Executive_ID" id="Executive_ID"></br>
                            <input type="text" name="Organization_ID" id="Organization_ID"></br>
                            <input type="text" name="Supervisor_ID" id="Supervisor_ID"></br>
                            <input type="text" name="Evaluator_ID" id="Evaluator_ID"></br>
                            <input type="text" name="Program_ID" id="Program_ID">
                          </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="submit" form="modal-form" class="btn btn-success">Update</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
            </div>

        </div>
    </div>

    <%- include("includes/navbar.ejs")%>

        <div class="container">
            <div class="row" id="row">
                <div class="col-md-12">
                    <div class="card" id="card-container">
                        <div class="card-body" id="card">
                            <% if (fields.length==0) { %>
                                <h1 style="margin-top: 5rem;">No Projects found!</h1>
                                <% } else { %>
                                    <div class="table-responsive">
                                        <table class="table">
                                            <thead>
                                                <tr>
                                                    <th>Project_ID</th>
                                                    <th>Title</th>
                                                    <th>Summary</th>
                                                    <th>Starting_Date</th>
                                                    <th>Ending_Date</th>
                                                    <th>Amount</th>
                                                    <th>Grade</th>
                                                    <th>Evaluation_Date</th>
                                                    <th>Executive_ID</th>
                                                    <th>Organization_ID</th>
                                                    <th>Supervisor_ID</th>
                                                    <th>Evaluator_ID</th>
                                                    <th>Program_ID</th>
                                                    <th></th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <% fields.forEach((fields, _)=> { %>
                                                    <tr>
                                                        <td>
                                                            <%= fields.Project_ID %>
                                                        </td>
                                                        <td>
                                                            <%= fields.Title %>
                                                        </td>
                                                        <td>
                                                            <%= fields.Summary %>
                                                        </td>
                                                        <td>
                                                           <%= fields.Starting_Date %>
                                                        </td>
                                                        <td>
                                                           <%= fields.Ending_Date %>
                                                        </td>
                                                        <td>
                                                           <%= fields.Amount %>
                                                        </td>
                                                        <td>
                                                          <%= fields.Grade %>
                                                        </td>
                                                        <td>
                                                          <%= fields.Evaluation_Date %>
                                                        </td>
                                                        <td>
                                                          <%= fields.Executive_ID %>
                                                        </td>
                                                        <td>
                                                          <%= fields.Organization_ID %>
                                                        </td>
                                                        <td>
                                                          <%= fields.Supervisor_ID %>
                                                        </td>
                                                        <td>
                                                          <%= fields.Evaluator_ID %>
                                                        </td>
                                                        <td>
                                                          <%= fields.Program_ID %>
                                                        </td>
                                                        <td>
                                                            <a type="button" onclick="setModalFields(this)"
                                                                data-toggle="modal"
                                                                data-Project_ID="<%= fields.Project_ID %>"
                                                                data-Title="<%= fields.Title %>"
                                                                data-Summary="<%= fields.Summary %>"
                                                                data-Stating_Date="<%= fields.Starting_Date %>"
                                                                data-Ending_Date="<%= fields.Ending_Date %>"
                                                                data-Amount="<%= fields.Amount %>"
                                                                data-Grade="<%= fields.Grade %>"
                                                                data-Evaluation_Date="<%= fields.Evaluation_Date %>"
                                                                data-Executive_ID="<%= fields.Executive_ID %>"
                                                                data-Organization_ID="<%= fields.Organization_ID %>"
                                                                data-Supervisor_ID="<%= fields.Supervisor_ID %>"
                                                                data-Evaluator_ID="<%= fields.Evaluator_ID %>"
                                                                data-Program_ID="<%= fields.Program_ID %>"
                                                                data-target="#editModal">
                                                                <i class="fa fa-edit"></i>
                                                            </a>
                                                        </td>
                                                    </tr>
                                                    <% }) %>
                                            </tbody>
                                        </table>
                                    </div>
                                    <% } %>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <script>
            function setModalFields(row) {
                document.getElementById("Project_ID").value = row.dataset.Project_ID;
                document.getElementById("Title").value = row.dataset.Title;
                document.getElementById("Summary").value = row.dataset.Summary;
                document.getElementById("Starting_Date").value = row.dataset.Starting_Date;
                document.getElementById("Ending_Date").value = row.dataset.Ending_Date;
                document.getElementById("Amount").value = row.dataset.Amount;
                document.getElementById("Grade").value = row.dataset.Grade;
                document.getElementById("Evaluation_Date").value = row.dataset.Evaluation_Date;
                document.getElementById("Executive_ID").value = row.dataset.Executive_ID;
                document.getElementById("Organization_ID").value = row.dataset.Organization_ID;
                document.getElementById("Supervisor_ID").value = row.dataset.Supervisor_ID;
                document.getElementById("Evaluator_ID").value = row.dataset.Evaluator_ID;
                document.getElementById("Program_ID").value = row.dataset.Program_ID;
                document.getElementById("modal-form").action = "/fields/update/" + row.dataset.id;
                document.getElementById("modal-form").method = "POST";
            }
        </script>

        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
            integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
        <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
            integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
            crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js"
            integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
            crossorigin="anonymous"></script>

        <script src="/assets/js/jquery.min.js"></script>
        <script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>

</body>

</html>