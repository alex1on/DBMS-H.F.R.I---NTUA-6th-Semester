<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
    <title>
        <%= pageTitle %>
    </title>
    <link rel="stylesheet" href="assets/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="stylesheet" href="assets/css/styles.css">
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css">
    <style>
        table {
            text-align: center;
        }
    
        .sidebar {
            height: 100%;
            /* 100% Full-height */
            width: 0;
            /* 0 width - change this with JavaScript */
            position: fixed;
            /* Stay in place */
            z-index: 1;
            /* Stay on top */
            top: 0;
            left: 0;
            background-color: #111;
            /* Black*/
            overflow-x: hidden;
            /* Disable horizontal scroll */
            padding-top: 60px;
            /* Place content 60px from the top */
            transition: 0.5s;
            /* 0.5 second transition effect to slide in the sidebar */
        }
    
        /* The sidebar links */
        .sidebar a {
            padding: 8px 8px 8px 32px;
            text-decoration: none;
            font-size: 17px;
            color: #818181;
            display: block;
            transition: 0.3s;
        }
    
        /* When you mouse over the navigation links, change their color */
        .sidebar a:hover {
            color: #f1f1f1;
        }
    
        /* Position and style the close button (top right corner) */
        .sidebar .closebtn {
            position: absolute;
            top: 0;
            right: 25px;
            font-size: 36px;
            margin-left: 50px;
        }
    
        /* The button used to open the sidebar */
        .openbtn {
            font-size: 20px;
            cursor: pointer;
            background-color: #111;
            color: white;
            padding: 10px 15px;
            border: none;
        }
    
        .openbtn:hover {
            background-color: #444;
        }
    
        /* Style page content - use this if you want to push the page content to the right when you open the side navigation */
        #main {
            transition: margin-left .5s;
            /* If you want a transition effect */
            padding: 20px;
        }
    
        #main2 {
            transition: margin-left .5s;
            /* If you want a transition effect */
            padding: 20px;
        }
    
        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
            margin: 0;
        }
    
        .navbar {
            transition: margin-left .5s;
            overflow: hidden;
            background-color: rgb(8, 22, 127);
        }
    
        .navbar a {
            float: left;
            font-size: 16px;
            color: rgb(215, 235, 32);
            text-align: center;
            padding: 14px 16px;
            text-decoration: none;
        }
    
        .subnav {
            float: right;
            overflow: hidden;
        }
    
        .subnav .subnavbtn {
            font-size: 16px;
            border: none;
            outline: none;
            color: rgb(255, 255, 255);
            padding: 14px 16px;
            background-color: inherit;
            font-family: inherit;
            margin: 0;
        }
    
        .navbar a:hover,
        .subnav:hover .subnavbtn {
            background-color: rgb(42, 167, 19);
        }
    
        .subnav-content {
            display: none;
            position: absolute;
            left: 0;
            background-color: purple;
            width: 100%;
            z-index: 1;
        }
    
        .subnav-content a {
            float: right;
            color: black;
            text-decoration: none;
        }
    
        .subnav-content a:hover {
            background-color: #eee;
            color: black;
        }
    
        .subnav:hover .subnav-content {
            display: block;
        }
    </style>
</head>

<body>

    <div id="editModal" class="modal fade" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Edit Executive</h4>
                </div>
                <div class="modal-body">
                    <form id="modal-form">
                        <div style="text-align: center;">
                            <input type="text" name="executive_id" id="executive_id" readonly></br>
                            <input type="text" name="first_name" id="first_name"></br>
                            <input type="text" name="last_name" id="last_name"></br>
                            <input type="text" name="sex" id="sex">
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="submit" form="modal-form" class="btn btn-success">Update</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
            </div>

        </div>
    </div>


    <%- include("includes/navbar.ejs")%>


        <div class="container">
            <div class="row" id="row">
                <div class="col-md-12">
                    <div class="card" id="card-container">
                        <div class="card-body" id="card">
                            <% if (executive.length==0) { %>
                                <h1 style="margin-top: 5rem;">No Executives found!</h1>
                                <% } else { %>
                                    <div class="table-responsive">
                                        <table class="table">
                                            <thead>
                                                <tr>
                                                    <th>ID</th>
                                                    <th>First Name</th>
                                                    <th>Last Name</th>
                                                    <th>Sex</th>
                                                    <th></th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <% executive.forEach((executive, _)=> { %>
                                                    <tr>
                                                        <td>
                                                            <%= executive.Executive_ID %>
                                                        </td>
                                                        <td>
                                                            <%= executive.First_Name %>
                                                        </td>
                                                        <td>
                                                            <%= executive.Last_Name %>
                                                        </td>
                                                        <td>
                                                            <%= executive.Sex %>
                                                        </td>
                                                        <!--<td>
                                                            <%= executive.last_update %>
                                                        </td> -->

                                                        <td>
                                                            <a type="button" style="all:unset ;cursor: pointer"
                                                                onclick="setModalexecutive(this)" data-toggle="modal"
                                                                data-executive_id="<%= executive.Executive_ID %>"
                                                                data-first_name="<%= executive.First_Name %>"
                                                                data-last_name="<%= executive.Last_Name %>"
                                                                data-sex="<%= executive.Sex %>"
                                                                data-target="#editModal">
                                                                <i class="fa fa-edit"></i>
                                                            </a>
                                                            <form method="POST"
                                                                action="/executive/delete?id=<%= executive.Executive_ID %>">
                                                        <td>
                                                            <button style="all: unset; cursor: pointer;"
                                                                type="submit"><i class="fa fa-trash"></i></button>

                                                        </td>
                                                        </form>
                                                        </td>
                                                    </tr>
                                                    <% }) %>
                                            </tbody>


                                        </table>
                                    </div>
                                    <% } %>
                                        <td><a href="/executive/create-executive-page">
                                                <button style="all: unset; cursor: pointer;" type="submit"><i
                                                        class="fa fa-add "></i></button>&nbspAdd Executive
                                            </a></th>


                        </div>
                    </div>
                </div>
            </div>
        </div>

        <script>
            function setModalexecutive(row) {
                document.getElementById("executive_id").value = row.dataset.executive_id;
                document.getElementById("first_name").value = row.dataset.first_name;
                document.getElementById("last_name").value = row.dataset.last_name;
                document.getElementById("sex").value = row.dataset.sex;
                document.getElementById("modal-form").action = "/executive/update/" + row.dataset.id;
                document.getElementById("modal-form").method = "POST";
            }
        </script>

        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
            integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
        <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
            integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
            crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js"
            integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
            crossorigin="anonymous"></script>

        <script src="/assets/js/jquery.min.js"></script>
        <script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>

</body>

</html>